---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    /* Fonts */
    --aw-font-sans: 'DM Sans';
    --aw-font-serif: 'DM Sans';
    --aw-font-heading: 'DM Sans';

    /* Colors */
    --aw-color-primary: #3498db; /* Azul Tecnológico */
    --aw-color-secondary: #f1c40f; /* Naranja Innovador */
    --aw-color-accent: #8e44ad; /* Violeta Colaborativo */
    --aw-color-text-heading: #ffffff; /* Blanco */
    --aw-color-text-default: #666666; /* Gris Oscuro */
    --aw-color-text-muted: #999999; /* Gris Claro */
    --aw-color-bg-page: #ffffff; /* Blanco */
    --aw-color-bg-page-dark: #1a1d23; /* Gris Oscuro */

    /* Selection styles */
    ::selection {
      background-color: #8e44ad; /* Violeta Colaborativo */
      color: #ffffff; /* Blanco */
      text-shadow: none;
    }
  }

  /**
 * Dark Mode Styles
 *
 * Override global variables for dark mode.
 */
  .dark {
    /* Colors */
    --aw-color-primary: #3498db; /* Azul Tecnológico */
    --aw-color-secondary: #f1c40f; /* Naranja Innovador */
    --aw-color-accent: #8e44ad; /* Violeta Colaborativo */
    --aw-color-text-heading: #ffffff; /* Blanco */
    --aw-color-text-default: #f7f7f7; /* Gris Claro */
    --aw-color-text-muted: #f7f7f7 / 66%; /* Gris Claro */
    --aw-color-bg-page: #1a1d23; /* Gris Oscuro */

    /* Selection styles */
    ::selection {
      background-color: #8e44ad; /* Violeta Colaborativo */
      color: #ffffff; /* Blanco */
      text-shadow: none;
    }
  }
</style>
